{
  "manifest_version": 2,
  "name": "Imgur Video to GIF",
  "short_name": "Imgur Vidgif",
  "description": "The quickest way to launch Imgur's video to GIF creation tool",
  "version": "1.2",

  "background": {
    "persistent": false,
    "page": "background.html"
  },
  "browser_action": {
    "default_title": "Imgur video to GIF"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "http://imgur.com/",
    "https://imgur.com/"
  ]
}
